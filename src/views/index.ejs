<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Document</title>
    <style>
        body{
          background-image: url(images/salud2.jpg);
          height: auto;
          width: 1500px;
          background-repeat: no-repeat;
          background-size: cover;
          
        }
        .overlay {
            background: #a9b7be;  /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #b8bcd6, #b8bcd6);  /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #b8bcd6, #b8bcd6); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            opacity: 0.5;
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
      </style>
</head>

<body>
    <form action="/enfermedades" method="post">
        <div class="overlay"></div>
        <div class="container mt-5 ">
            <h2 class="text-center">Diagnostico de enfermedades</h2>
            <div class="row mt-5">
                <div class="col">
                    <div class="form-group">
                        <label for="">Nombre Completo</label>
                        <input type="text" name="nombre" class="form-control">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="">Documento</label>
                        <input type="text" name="documento" class="form-control">
                    </div>

                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="">EPS</label>
                        <input type="text" name="eps" class="form-control">
                    </div>

                </div>
            </div>
            <div class="row mt-5">
                <div class="col text-center">
                    <h2>Ingrese sus sintomas</h2>
                </div>
            </div>

            <div class="row mt-5">
                <% for(var i = 0; i < data.length;i++) {%>
                    <div class="col-md-3 ">
                        <div class="row mt-3">
                            <div class="col-md-1">
                                <input type="radio" name="<%= data[i].Sintoma %>" id="sintomas" value="<%=  data[i].Sintoma %>">
                            </div>
                            <div class="col-md-10">
                                <%= data[i].Sintoma %>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
            <div class="row mt-5">
                <div class="col"></div>
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Diagnosticar</button>
                </div>
                <div class="col">
                </div>
            </div>
    </form>
    <div class="row mt-5">
        <div class="col">
            <h4>
                Nombre del paciente :
                <%= nombre %>
            </h4>
        </div>
        <div class="col">
            <h4>
                Cedula del paciente :
                <%= documento %>
            </h4>
        </div>
        <div class="col">
            <h4>
                EPS del paciente :
                <%= eps %>
            </h4>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col">

        </div>
        <div class="col">
            <h4>
                Parte medido: El paciente
                <%= msg %>
            </h4>
        </div>
        <div class="col">

        </div>
    </div>


    </div>
    
        

    <script src="jsFiles/prueba.js"></script>
</body>

</html>